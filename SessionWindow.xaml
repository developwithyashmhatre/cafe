<Window x:Class="my_cyber_cafe.SessionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Session" Height="350" Width="600" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Session Started!" FontSize="18" FontWeight="Bold"/>
            <TextBlock x:Name="SessionDurationText" Text="Session Duration: 00:00:00" FontSize="16" Margin="0,10,0,0"/>
            <Button Content="End Session" Width="150" Height="40" Margin="0,20,0,0" Click="EndSession_Click"/>
        </StackPanel>
    </Grid>
</Window> 