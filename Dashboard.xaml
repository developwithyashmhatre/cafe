<Window x:Class="my_cyber_cafe.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="dashboard" WindowStartupLocation="CenterScreen" Background="#18181A" ResizeMode="NoResize" WindowStyle="None" WindowState="Maximized" AllowsTransparency="False">
    <Grid>
        <!-- Top Bar -->
        <DockPanel LastChildFill="False" Height="60" VerticalAlignment="Top" Background="#23272A">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center" Margin="20,0,0,0">
                <TextBlock Text="Welcome, yash!" Foreground="White" FontWeight="Bold" FontSize="26" VerticalAlignment="Center"/>
                <Ellipse Width="10" Height="10" Fill="LimeGreen" Margin="15,0,0,0" VerticalAlignment="Center"/>
                <TextBlock Foreground="LightGray" FontSize="14" Margin="8,0,0,0" VerticalAlignment="Center">
                    <Run Text="Session Active ("/>
                    <Run x:Name="TopSessionTimeText" Text="00:59:33"/>
                    <Run Text=")"/>
                </TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center" Margin="0,0,20,0">
                <TextBlock x:Name="CurrentTimeText" Text="Current Time: 11:42:25" Foreground="White" FontSize="16" VerticalAlignment="Center" Margin="0,0,20,0"/>
                <Button Content="⏰" Width="32" Height="32" Margin="0,0,10,0"/>
                <Button Content="Minimize" Width="80" Height="32" Margin="0,0,10,0" Click="Minimize_Click"/>
                <Button Content="Logout" Width="80" Height="32" Background="#C0392B" Foreground="White" Click="Logout_Click"/>
            </StackPanel>
        </DockPanel>

        <!-- Navigation Tabs -->
        <TabControl x:Name="MainTabControl" Margin="0,60,0,80" Background="#23272A" BorderThickness="0" Foreground="White" FontSize="16">
            <!-- Control Tab -->
            <TabItem Header="Control">
                <Grid Background="#18191A">
                    <Border Background="#23272A" CornerRadius="10" Padding="20" Margin="40,40,40,40">
                        <StackPanel>
                            <TextBlock Text="System: Windows NT 10.0.26100-4652" Foreground="White" FontWeight="Bold" FontSize="16"/>
                            <TextBlock Text="Kiosk Mode: Disabled" Foreground="LimeGreen" FontSize="16"/>
                            <TextBlock Text="Device: PC-1 (PC)" Foreground="#3498DB" FontSize="16"/>
                            <Button Content="Change Device" FontSize="14" Margin="0,10,0,0" Padding="8,2" Click="ChangeDevice_Click"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>
            <!-- Session Tab -->
            <TabItem Header="Session">
                <Grid Background="#18191A">
                    <Border Background="#23272A" CornerRadius="10" Padding="20" Margin="40,40,40,40">
                        <StackPanel>
                            <TextBlock Text="Session Status" FontWeight="Bold" FontSize="18" Foreground="White"/>
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <TextBlock Text="Session started at 11:43:33 AM" Foreground="LightGray" FontSize="14"/>
                                <TextBlock Text="  •  Payment: " Foreground="LightGray" FontSize="14"/>
                                <Border Background="#444" CornerRadius="5" Padding="4,0" Margin="4,0,0,0">
                                    <TextBlock Text="Pre-paid" Foreground="White" FontSize="12"/>
                                </Border>
                            </StackPanel>
                            <Border Background="#18191A" CornerRadius="8" Padding="20" Margin="0,20,0,0">
                                <StackPanel>
                                    <TextBlock Text="Time Remaining" Foreground="White" FontWeight="Bold" FontSize="16"/>
                                    <TextBlock x:Name="SessionTimeText" Text="00:59:33" Foreground="#27AE60" FontWeight="Bold" FontSize="32"/>
                                </StackPanel>
                            </Border>
                            <StackPanel Orientation="Horizontal" Margin="0,20,0,0" HorizontalAlignment="Left">
                                <StackPanel Margin="0,0,40,0">
                                    <TextBlock Text="Duration" Foreground="LightGray" FontSize="14"/>
                                    <TextBlock Text="60 minutes" Foreground="White" FontWeight="Bold" FontSize="16"/>
                                </StackPanel>
                                <StackPanel Margin="0,0,40,0">
                                    <TextBlock Text="Time Played" Foreground="LightGray" FontSize="14"/>
                                    <TextBlock Text="0 minutes" Foreground="White" FontWeight="Bold" FontSize="16"/>
                                </StackPanel>
                                <StackPanel Margin="0,0,40,0">
                                    <TextBlock Text="Session Cost" Foreground="LightGray" FontSize="14"/>
                                    <TextBlock x:Name="SessionCostText" Text="100.00" Foreground="White" FontWeight="Bold" FontSize="16"/>
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Text="Total Amount" Foreground="LightGray" FontSize="14"/>
                                    <TextBlock Text="100.00" Foreground="White" FontWeight="Bold" FontSize="16"/>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,30,0,0">
                                <Button Content="+ Extend 1 Hour" Width="200" Height="40" Background="#23272A" Foreground="White" BorderBrush="#27AE60" BorderThickness="2" FontWeight="Bold" Click="ExtendHour_Click"/>
                                <Button Content="End Session" Width="200" Height="40" Background="#C0392B" Foreground="White" FontWeight="Bold" Margin="20,0,0,0" Click="EndSession_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>
            <!-- Membership Tab -->
            <TabItem Header="Membership">
                <Grid Background="#18191A">
                    <Border Background="#23272A" CornerRadius="10" Padding="20" Margin="40,40,40,40">
                        <StackPanel>
                            <TextBlock Text="Available Membership Plans" FontWeight="Bold" FontSize="18" Foreground="Gold"/>
                            <TextBlock Text="No membership plans available at the moment." Foreground="LightGray" FontSize="16" Margin="0,10,0,0"/>
                            <TextBlock Text="My Active Memberships" FontWeight="Bold" FontSize="18" Foreground="Red" Margin="0,30,0,0"/>
                            <TextBlock Text="You don't have any active memberships." Foreground="LightGray" FontSize="16" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>
            <!-- Recharge Tab -->
            <TabItem Header="Recharge">
                <Grid Background="#18191A">
                    <Border Background="#23272A" CornerRadius="10" Padding="20" Margin="40,40,40,40">
                        <StackPanel>
                            <TextBlock Text="Wallet Balance" FontWeight="Bold" FontSize="18" Foreground="#3498DB"/>
                            <TextBlock Text="₹0.00" Foreground="#3498DB" FontWeight="Bold" FontSize="28"/>
                            <TextBlock Text="No customer account linked. Contact admin to set up your account." Foreground="LightGray" FontSize="14" Margin="0,10,0,0"/>
                            <TextBlock Text="Recharge Plans" FontWeight="Bold" FontSize="18" Foreground="#2ECC40" Margin="0,30,0,0"/>
                            <TextBlock Text="No recharge plans available at the moment." Foreground="LightGray" FontSize="16"/>
                            <TextBlock Text="Recharge History" FontWeight="Bold" FontSize="18" Foreground="#B10DC9" Margin="0,30,0,0"/>
                            <TextBlock Text="No recharge history found." Foreground="LightGray" FontSize="16"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>
            <!-- Chat Tab -->
            <TabItem Header="Chat">
                <Grid Background="#18191A">
                    <Border Background="#23272A" CornerRadius="10" Padding="20" Margin="40,40,40,40">
                        <StackPanel>
                            <TextBlock Text="Chat with Support" FontWeight="Bold" FontSize="18" Foreground="#3498DB"/>
                            <Button x:Name="StartChatSessionButton" Content="Start Chat Session" Width="180" Height="32" Margin="0,10,0,0" Click="StartChatSessionButton_Click"/>
                            <ListBox x:Name="ChatMessagesListBox" Height="200" Margin="0,10,0,0"/>
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <TextBox x:Name="ChatMessageTextBox" Width="400" Height="32" Margin="0,0,10,0"/>
                                <Button x:Name="SendChatMessageButton" Content="Send" Width="80" Height="32" Background="#C0392B" Foreground="White" Click="SendChatMessageButton_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>
            <!-- Snacks Tab -->
            <TabItem Header="Snacks">
                <Grid Background="#18191A">
                    <Border Background="#23272A" CornerRadius="10" Padding="20" Margin="40,40,40,40">
                        <TextBlock Text="Snacks section coming soon..." Foreground="LightGray" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Bottom System Info Panel -->
        <Border Background="#23272A" Height="70" VerticalAlignment="Bottom" CornerRadius="10,10,0,0" Margin="10,0,10,10">
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
                    <TextBlock Text="System: Windows NT 10.0.26100-4652" Foreground="White" FontWeight="Bold" FontSize="16"/>
                    <TextBlock Text="  " FontSize="16"/>
                    <TextBlock Text="Kiosk Mode: " Foreground="White" FontSize="16"/>
                    <TextBlock Text="Disabled" Foreground="LimeGreen" FontSize="16"/>
                    <TextBlock Text="  " FontSize="16"/>
                    <TextBlock Text="Device: " Foreground="White" FontSize="16"/>
                    <TextBlock Text="PC-1 (PC)" Foreground="#3498DB" FontSize="16"/>
                    <TextBlock Text="  " FontSize="16"/>
                    <Button Content="Change Device" FontSize="14" Padding="8,2" Click="ChangeDevice_Click"/>
                </StackPanel>
                <TextBlock Text="Wednesday, July 23, 2025" Foreground="White" FontSize="16" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0"/>
            </Grid>
        </Border>
    </Grid>
</Window>
