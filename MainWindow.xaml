<Window x:Class="my_cyber_cafe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cyber Cafe Client" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
            <TextBlock Text="Dashboard" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
            <Border BorderBrush="Gray" BorderThickness="1" Padding="20" CornerRadius="10" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Session Timer" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <TextBlock x:Name="DashboardTimerText" Text="Session Duration: 00:00:00" FontSize="20"/>
                </StackPanel>
            </Border>
            <Button Content="End Session" Width="150" Height="40" Margin="0,10,0,0" Click="EndSession_Click"/>
            <!-- Add more dashboard sections here -->
        </StackPanel>
    </Grid>
</Window>
